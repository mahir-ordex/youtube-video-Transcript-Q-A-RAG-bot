{
  "manifest_version": 3,
  "name": "YouTube Transcript Q&A RAG Bot",
  "version": "1.0.0",
  "description": "Ask questions and get answers from YouTube video transcripts using RAG.",
  "icons": {
    "16": "vite.svg",
    "32": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "action": {
    "default_title": "YouTube Transcript Q&A",
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}